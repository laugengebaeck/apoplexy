<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="6dip" android:layout_height="140dp">
    <ImageView
        android:id="@+id/badge_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_medal_normal"/>
    <TextView
        android:id="@+id/text_badge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/badge_icon"
        android:paddingTop="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Title" />
    <TextView
        android:id="@+id/text_badge_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_badge_title"
        android:layout_toEndOf="@+id/badge_icon"
        android:textSize="14sp"
        android:text="Second line" />
</RelativeLayout>